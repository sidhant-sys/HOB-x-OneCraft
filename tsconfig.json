{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "Node",
    "paths": {
      "~*": ["./*"],
      "@assets/*": ["src/assets/*"]
    },
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src/**/*", "declaration.d.ts"]
}
